@model InventoryBeginners.Models.Supplier

@{
    ViewData["Title"] = "Details";
}
<h1>Supplier Details</h1>
<div>
    <hr />

    <input type="hidden" asp-for="Id" />   

    <div class="form-group">
        <label asp-for="Code" class="control-label"></label>
        <input asp-for="Code" class="form-control" readonly />        
    </div>

    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" readonly />        
    </div>

    <div class="form-group">
        <label asp-for="EmailId" class="control-label"></label>
        <input asp-for="EmailId" class="form-control" readonly />        
    </div>

    <div class="form-group">
        <label asp-for="PhoneNo" class="control-label"></label>
        <input asp-for="PhoneNo" class="form-control" readonly />        
    </div>

    <div class="form-group">
        <label asp-for="Address" class="control-label"></label>
        <textarea asp-for="Address" class="form-control" rows="4" readonly></textarea>        
    </div>



</div>
<div class="btn-group">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
    <a class="btn btn-secondary" asp-action="index"
       asp-route-pg="@TempData["CurrentPage"]">Back</a>    
</div>
